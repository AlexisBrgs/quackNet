{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
<div class="card bg-secondary border-success w-75 mx-auto my-4 ">
    {{ form_start(form) }}
    <div class="card-title m-2">
        <h1 class="m-2"> Edit your profile content : </h1>
    </div>
    <div class="my-4 mx-2">
        {{ form_widget(form) }}
    </div>
    <a class ="btn btn-info m-2" href="{{ path('quack_index') }}">Back to profile</a>
    <button class="btn btn-success m-2">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>


{% endblock %}
